# Environment Configuration for ReplyoAI Backend
# Copy this file to .env and set your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_PATH=/api/v1

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/replyoai?schema=public"

# Redis Configuration (for sessions, rate limiting, job queues)
REDIS_URL=redis://localhost:6379

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Sentry Configuration (for error tracking)
SENTRY_DSN=https://your-dsn@sentry.io/project-id
SENTRY_ORG=your-org
SENTRY_PROJECT=replyoai-backend
SENTRY_AUTH_TOKEN=sntrys_your_auth_token_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.com

# Email Configuration (for notifications)
EMAIL_FROM=noreply@replyoai.com
EMAIL_SMTP_HOST=smtp.sendgrid.net
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=apikey
EMAIL_SMTP_PASS=SG.your_sendgrid_api_key_here

# Business Configuration
DEFAULT_RATE_LIMIT_WINDOW_MS=900000
DEFAULT_RATE_LIMIT_MAX_REQUESTS=100
REVENUE_ESTIMATION_ENABLED=true
FOLLOW_UP_ENABLED=true
METRICS_ENABLED=true

# Security
JWT_SECRET=your-super-secret-jwt-key-256-bits-long-here
API_KEY_SECRET=your-api-key-secret-here

# Feature Flags
ENABLE_BACKGROUND_JOBS=true
ENABLE_METRICS_COLLECTION=true
ENABLE_ERROR_TRACKING=true
ENABLE_RATE_LIMITING=true

# Monitoring
HEALTH_CHECK_TIMEOUT=5000
METRICS_COLLECTION_INTERVAL=60000

# Development Settings (remove in production)
LOG_LEVEL=debug
PRETTY_PRINT_LOGS=true